{
  "name": "electron-terminal-window",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "export testing='true' PS1='electron-terminal-window$' && standard && babel-tape-runner ./test/visual/*.js --tap | tap-spec",
    "coverage": "export coverage='true' testing='true' PS1='electron-terminal-window$' && standard && babel-tape-runner ./test/visual/*.js --tap | tap-spec",
    "xvfb-test": "xvfb-run -s '-screen 0 640x480x8' npm test",
    "xvfb-coverage": "xvfb-run -s '-screen 0 640x480x8' npm run coverage",
    "coveralls": "npm run xvfb-coverage && cat ./coverage/lcov.info | coveralls"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "pty.js": "^0.3.1",
    "xterm": "^1.1.3"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-regenerator": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-tape-runner": "^2.0.1",
    "coveralls": "^2.11.14",
    "electron": "^1.4.1",
    "electron-rebuild": "^1.2.1",
    "istanbul": "^0.4.5",
    "spectron": "^3.4.0",
    "standard": "^8.1.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "syntax-async-functions",
      "transform-regenerator"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
